<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Hello World!"
        android:textSize="56dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/soal_g_button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Soal Grid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/lat_c_button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Latihan Constraint"
            app:layout_constraintLeft_toLeftOf="@+id/soal_g_button"
            app:layout_constraintRight_toRightOf="@+id/soal_g_button"
            app:layout_constraintTop_toBottomOf="@+id/soal_g_button" />

        <Button
            android:id="@+id/lat_i_1_button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Latihan Intent 1"
            app:layout_constraintLeft_toLeftOf="@+id/lat_c_button"
            app:layout_constraintRight_toRightOf="@+id/lat_c_button"
            app:layout_constraintTop_toBottomOf="@+id/lat_c_button" />

        <Button
            android:id="@+id/lat_i_2_button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Latihan Intent 2"
            app:layout_constraintLeft_toLeftOf="@+id/lat_i_1_button"
            app:layout_constraintRight_toRightOf="@+id/lat_i_1_button"
            app:layout_constraintTop_toBottomOf="@+id/lat_i_1_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>